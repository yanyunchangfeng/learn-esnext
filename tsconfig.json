{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "strict": false,
    "lib": ["dom", "esnext"],
    "target": "es2017",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "*": ["src/types/*"]
    },
    // "preserveConstEnums": true, // 编译结果保留const定义的常量枚举 默认关闭
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true
  },
  "include": ["src/**/*", "src/typings/*"]
}
